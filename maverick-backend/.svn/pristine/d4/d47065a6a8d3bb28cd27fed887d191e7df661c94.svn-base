static Holdem foldAction () {		return FOLD_ACTION;	}	public static Holdem checkAction () {		return CHECK_ACTION;	}	public static Holdem checkOrFoldAction () {		return CHECK_OR_FOLD_ACTION;	}		public static Holdem callAction (int am) {		return new Holdem (CHECK_OR_CALL, am);	}	public static Holdem betAction (int am) {		return new Holdem (BET, am);	}		public static Holdem raiseAction (int am) {		return new Holdem (RAISE, am);	}		public static Holdem betOrRaiseAction (int am) {		return new Holdem (BET | RAISE, am);	}		public static Holdem smallBlindAction (int am) {		return new Holdem (SMALL_BLIND, am);	}	public static Holdem bigBlindAction (int am) {		return new Holdem (BIG_BLIND, am);	}			@SuppressWarnings("unused")	private Holdem () {		// parameterless construction not permitted	}		public Holdem (int act, int am) {		action = act;		amount = am;	}	public boolean isNone() {		return (action == NONE);	}		public boolean isFold() {		return (action == FOLD);	}		public boolean isCheck() {		return ((action == CHECK_OR_CALL) && (amount == 0));	}		public int callAmount() {		if (action == CHECK_OR_CALL) {			return amount;		} else {			return 0;		}	}		public boolean isCheckOrCall() {		return (action == CHECK_OR_CALL);	}		public int betAmount() {		if (action == BET) {			return amount;		} else {			return 0;		}	}		public int raiseAmount() {		if (action == RAISE) {			return amount;		} else {			return 0;		}	}		public int betOrRaiseAmount() {		if ((action == BET) || (action == RAISE)) {			return amount;		} else {			return 0;		}	}		public int smallBlindAmount() {		if (action == SMALL_BLIND) {			return amount;		} else {			return 0;		}	}		public int bigBlindAmount() {		if (action == BIG_BLIND) {			return amount;		} else {			return 0;		}	}		public int blindAmount() {		if ((action == SMALL_BLIND) || (action == BIG_BLIND)) {			return amount;		} else {			return 0;		}	}		@Override	public String toString () {		if (isNone ()) {			return Iface.MSG_NO_ACTION;		} else if (isFold ()) {			return Iface.FOLD;		} else if (action == CHECK_OR_CALL) {			return Iface.CALL + " " + amount;		} else if (betAmount () > 0) {			return Iface.MSG_BET + " " + amount;		} else if (raiseAmount () > 0) {			return Iface.RAISE + " " + amount;		} else if (smallBlindAmount () > 0) {			return Iface.SMALL_BLIND + " " + amount;		} else if (bigBlindAmount () > 0) {			return Iface.BIG_BLIND + " " + amount;		} else {			return Iface.ERROR + " " + action+ " " + amount;		}	}		@Override	public boolean equals (Object h) {		if (h instanceof Holdem) {			return (((action & ((Holdem) h).action) > 0) && (amount == ((Holdem) h).amount));		} else {			return false;		}	}}