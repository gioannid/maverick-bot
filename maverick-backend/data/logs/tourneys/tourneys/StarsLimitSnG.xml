<!-- Tournament structure specification -->
<tourn_struct>

	<!-- Basic tournament details -->
	<details name="Stars - Single Table"
			 game_type="Texas Holdem"
			 betting="Limit"
			 style="Sit &amp; Go"
			 initial_prize_pool="0"
			 online="true"		
			 start_chips="1500"
			 min_start_chips="500"	 
			 max_start_chips="5000"
			 max_rebuys_per_player="0"
			 min_players="2"
			 max_players="9"
			 max_players_per_table="9">
		
		<category name="Limit">
			<category name="Single Table">
			</category>
		</category>
 
		 <buy_ins>
		 	<buy_in toPrize = "5" toHouse = "0.50"/>
		 	<buy_in toPrize = "10" toHouse = "1"/>
		 	<buy_in toPrize = "20" toHouse = "2"/>
		 	<buy_in toPrize = "30" toHouse = "3"/>
		 	<buy_in toPrize = "50" toHouse = "5"/>
		 	<buy_in toPrize = "100" toHouse = "9"/>
		 	<buy_in toPrize = "200" toHouse = "15"/>
		 	<buy_in toPrize = "300" toHouse = "20"/>
		 	<buy_in toPrize = "500" toHouse = "30"/>
		 	<buy_in toPrize = "1000" toHouse = "50"/>
		 </buy_ins>
		 
		 Simulates the basic structure of a Stars Limit Single Table Tournament. 
	
	</details>			 
	
	<!-- Tournament levels -->
	<levels>
			
		<!-- level 1 -->
		<level ante="0" small_blind="10" big_blind="20">
			<play until="10" until_units="min"/>
		</level>
		
		<!-- level 2 -->
		<level ante="0" small_blind="15" big_blind="30">
			<play until="20" until_units="min"/>
		</level>
		
		<!-- level 3 -->
		<level ante="0" small_blind="25" big_blind="50">
			<play until="30" until_units="min"/>
		</level>
		
		<!-- level 4 -->
		<level ante="0" small_blind="50" big_blind="100">
			<play until="40" until_units="min"/>
		</level>
		
		<!-- level 5 -->
		<level ante="0" small_blind="75" big_blind="150">
			<play until="50" until_units="min"/>
		</level>
		
		<!-- level 6 -->
		<level ante="0" small_blind="100" big_blind="200">
			<play until="60" until_units="min"/>
		</level>
		
		<!-- level 7 -->
		<level ante="0" small_blind="150" big_blind="300">
			<play until="70" until_units="min"/>
		</level>		
		
		<!-- level 8 -->
		<level ante="0" small_blind="200" big_blind="400">
			<play until="80" until_units="min"/>
		</level>		
			
		<!-- level 9 -->
		<level ante="0" small_blind="300" big_blind="600">
			<play until="90" until_units="min"/>
		</level>		
		
		<!-- level 10 -->
		<level ante="0" small_blind="400" big_blind="800">
			<play until="100" until_units="min"/>
		</level>

		<!-- level 11 -->
		<level ante="0" small_blind="600" big_blind="1200">
			<play until="110" until_units="min"/>
		</level>				
		
		<!-- level 12 -->
		<level ante="0" small_blind="1000" big_blind="2000">
			<play until="120" until_units="min"/>
		</level>		
		
		<!-- level 13 -->
		<level ante="0" small_blind="1500" big_blind="3000">
			<play until="130" until_units="min"/>
		</level>

		<!-- level 14 -->
		<level ante="0" small_blind="2000" big_blind="4000">
			<play until="140" until_units="min"/>
		</level>
		
		<!-- level 15 -->
		<level ante="0" small_blind="3000" big_blind="6000">
			<play until="150" until_units="min"/>
		</level>
		
		<!-- level 16 -->
		<level ante="0" small_blind="4000" big_blind="8000">
			<play until="160" until_units="min"/>
		</level>
				
		<!-- level 17 -->
		<level ante="0" small_blind="6000" big_blind="12000">
			<play until="170" until_units="min"/>
		</level>
		
		<!-- level 18 -->
		<level ante="0" small_blind="10000" big_blind="20000">
			<play until="180" until_units="min"/>
		</level>
		
		<!-- level 19 -->
		<level ante="0" small_blind="15000" big_blind="30000">
			<play until="190" until_units="min"/>
		</level>		

		<!-- level 20 -->
		<level ante="0" small_blind="20000" big_blind="40000">
		</level>		
		
	</levels>
		
			
	<!-- Global Breaks -->
	<breaks>	
	<!-- No Breaks -->
	</breaks>	
	
	
	<!-- Specify prize payouts -->
	<tourn_payouts>
		<!-- Specify prize payouts based on the number of entrants -->
		<!-- Given number of entrants, specify payouts based on final finish placing -->
		
		<!-- 2 to 4 entries -->
		<payouts_by_num_entrants min_entrants="2" max_entrants="4">
	       	<payout_by_finish min_finish="1" max_finish="1" payout_value="100" payout_units="%"/>
        </payouts_by_num_entrants>
		
		<!-- 5 to 6 entries -->
		<payouts_by_num_entrants min_entrants="5" max_entrants="6">
	       	<payout_by_finish min_finish="1" max_finish="1" payout_value="70" payout_units="%"/>
	       	<payout_by_finish min_finish="2" max_finish="2" payout_value="30" payout_units="%"/>	       	
        </payouts_by_num_entrants>
		
		<!-- 7 to 9 Entries -->	
		<payouts_by_num_entrants min_entrants="7" max_entrants="9">
	       	<payout_by_finish min_finish="1" max_finish="1" payout_value="50" payout_units="%"/>
	       	<payout_by_finish min_finish="2" max_finish="2" payout_value="30" payout_units="%"/>    
	       	<payout_by_finish min_finish="3" max_finish="3" payout_value="20" payout_units="%"/>
        </payouts_by_num_entrants>
        
	</tourn_payouts>
		
</tourn_struct>