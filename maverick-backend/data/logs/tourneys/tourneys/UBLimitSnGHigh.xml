<!-- Tournament structure specification -->
<tourn_struct>

	<!-- Basic tournament details -->
	<details name="UB - High Buy-in"
			 game_type="Texas Holdem"
			 betting="Limit"
			 style="Sit &amp; Go"
			 initial_prize_pool="0"
			 online="true"			 
			 start_chips="2500"
			 min_start_chips="2500"
			 max_start_chips="10000"
			 max_rebuys_per_player="0"
			 min_players="2"
			 max_players="10"
			 max_players_per_table="10">

		<category name="Limit">
			<category name="Single Table">
			</category>
		</category>

			 
		 <buy_ins>
		 	<buy_in toPrize = "100" toHouse = "9"/>
		 	<buy_in toPrize = "200" toHouse = "15"/>
		 	<buy_in toPrize = "300" toHouse = "20"/>
		 	<buy_in toPrize = "500" toHouse = "30"/>
		 	<buy_in toPrize = "1000" toHouse = "50"/>
		 </buy_ins>
		 
		 Simulates the basic structure of an UB High Buy-In Limit Single Table Tournament.
	
	</details>			 
	
	<!-- Tournament levels -->
	<levels>
			
		<!-- level 1 -->
		<level ante="0" small_blind="15" big_blind="30">
			<play until="12" until_units="hand"/>
		</level>
		
		<!-- level 2 -->
		<level ante="0" small_blind="20" big_blind="40">
			<play until="24" until_units="hand"/>
